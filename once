#!/bin/bash

set -e

echo "ðŸ”„ Updating package lists..."
sudo apt update

echo "â¬†ï¸ Upgrading installed packages..."
sudo apt full-upgrade -y

echo "ðŸ§¹ Removing unused packages..."
sudo apt autoremove --purge -y
sudo apt clean

echo "ðŸ§ (Optional) Updating Raspberry Pi firmware..."
if command -v rpi-eeprom-update &> /dev/null; then
    sudo rpi-eeprom-update -a
else
    echo "rpi-eeprom-update not found (not needed on Ubuntu Server for Pi 5 with up-to-date kernel)."
fi

echo "Setting up firewall"

apt install ufw
ufw allow ssh
ufw default deny incoming
ufw default allow outgoing
ufw enable
ufw status verbose

echo "SSD support"

systemctl enable fstrim.timer
systemctl start fstrim.timer

echo "âœ… System is up to date."
